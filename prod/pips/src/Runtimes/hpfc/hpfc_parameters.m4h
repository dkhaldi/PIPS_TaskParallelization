!
! parameters used to compile 
!
! type declarations
!
      integer
     $     INT FLAG,
     $     MAX NB OF ARRAYS,
     $     MAX NB OF TEMPLATES,
     $     MAX NB OF PROCESSORS,
     $     MAX MAX SIZE OF PROCS,
     $     MAX MAX SIZE OF BUFFER,
     $     MAX SIZE OF STATUS,
     $     DATARAW ENCODING,
     $     BUFFER ENCODING,
     $     HPFC SUM,
     $     HPFC PROD,
     $     HPFC MAX,
     $     HPFC MIN


!
! parameters
!
      parameter(INT FLAG = -1234567890)
      parameter(MAX NB OF ARRAYS = 100)
      parameter(MAX NB OF TEMPLATES = 32)
      parameter(MAX NB OF PROCESSORS = 32)
      parameter(MAX MAX SIZE OF PROCS = _HPFC_MAX_NPES_)
      parameter(MAX SIZE OF STATUS = 10)
      parameter(HPFC SUM=1)
      parameter(HPFC PROD=2)
      parameter(HPFC MAX=3)
      parameter(HPFC MIN=4)
!
! MAXMAXSIZEOFBUFFER is around 1 MB
!
      parameter(MAX MAX SIZE OF BUFFER = 1000000)


!
! SPECIFIC BUFFER ENCODING (1=Pvmdataraw and 2=_HPFC_ENCODING_) 
!
      parameter(DATARAW ENCODING = 1)
      parameter(BUFFER ENCODING = 2)  

!
! that s all
!

