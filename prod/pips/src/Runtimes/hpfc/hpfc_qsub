# output a description file for qsub.

npes=`sed -n 's,      parameter(REALMAXSIZEOFPROCS = \(.*\)),\1,p' \
	global_parameters.h`
npes=`expr $npes + 1`

pwd=`pwd`

cat <<-EOF
	#QSUB -r ${1:-hpfc}
	#QSUB -eo
	#QSUB -l mpp_p=${npes}
	#QSUB -l mpp_t=200
	#QSUB -s /bin/sh
	TARGET=cray-t3d
	export TARGET
	cd ${pwd}
	${1}_main -npes ${npes} 2> run.err > run.out
EOF

