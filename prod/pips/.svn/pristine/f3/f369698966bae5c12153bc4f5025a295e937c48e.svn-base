[nosetests]
match = ^test
nocapture = 1
cover-package = pawsapp
with-coverage = 1
cover-erase = 1

[compile_catalog]
directory = pawsapp/locale
domain = pawsapp
statistics = true

[extract_messages]
add_comments = TRANSLATORS:
output_file = pawsapp/locale/pawsapp.pot
width = 80

[init_catalog]
domain = pawsapp
input_file = pawsapp/locale/pawsapp.pot
output_dir = pawsapp/locale

[update_catalog]
domain = pawsapp
input_file = pawsapp/locale/pawsapp.pot
output_dir = pawsapp/locale
previous = true
