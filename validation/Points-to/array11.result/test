
PROPER  EFFECTS

int bar(int *p)
{
   int b[100];
//             <    is written>: p
   p = &b[0];
//             <may be read   >: *ANY_MODULE*:*ANYWHERE*_b0
//             <    is read   >: p
//             <    is written>: a[*p++] p
   a[*p++] = 2.;
   return 0;
}
int foo(int *p)
{
   int b[100];
//             <    is written>: p
   p = &b[0];
//             <may be read   >: *ANY_MODULE*:*ANYWHERE*_b0
//             <    is read   >: p
//             <    is written>: a[*p+1]
   a[*p+1] = 2.;
   return 0;
}
int toto(int *p)
{
   int *q;
   int b[100];
//             <    is written>: p
   p = &b[0];
//             <may be read   >: *ANY_MODULE*:*ANYWHERE*_b0
//             <    is read   >: p
//             <    is written>: a[*(q = p)] q

   a[*(q = p)] = 2.;
   return 0;
}

POINTS-TO


// Points To IN: none


// Points To OUT:
// p -> undefined , EXACT

int bar(int *p)
{

// Points To: none

   int b[100];

// Points To: none

   p = &b[0];

// Points To:
// p -> b[0] , EXACT

   a[*p++] = 2.;

// Points To:
// p -> b[1] , EXACT

   return 0;
}

// Points To IN: none


// Points To OUT:
// p -> undefined , EXACT

int foo(int *p)
{

// Points To: none

   int b[100];

// Points To: none

   p = &b[0];

// Points To:
// p -> b[0] , EXACT

   a[*p+1] = 2.;

// Points To:
// p -> b[0] , EXACT

   return 0;
}

// Points To IN: none


// Points To OUT:
// p -> undefined , EXACT

int toto(int *p)
{

// Points To: none

   int *q;

// Points To:
// q -> undefined , EXACT

   int b[100];

// Points To:
// q -> undefined , EXACT

   p = &b[0];

// Points To:
// p -> b[0] , EXACT
// q -> undefined , EXACT


   a[*(q = p)] = 2.;

// Points To:
// p -> b[0] , EXACT
// q -> b[0] , EXACT

   return 0;
}
