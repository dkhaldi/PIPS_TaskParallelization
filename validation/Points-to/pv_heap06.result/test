
Proper effects

int main()
{
   int *p, *q;
//             <    is written>: a
   int a = 1;
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: p _MALLOC_EFFECTS:_MALLOC_
   p = (int *) malloc(2*sizeof(int));
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: q _MALLOC_EFFECTS:_MALLOC_
   q = (int *) malloc(2*sizeof(int));
//             <may be read   >: p q
//             <    is read   >: a _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: _MALLOC_EFFECTS:_MALLOC_
   free(a==0?p:q);
   return 0;
}

Points-to


// Points To IN: none


// Points To OUT: none

int main()
{

// Points To: none

   int *p, *q;

// Points To:
// p -> undefined , EXACT
// q -> undefined , EXACT

   int a = 1;

// Points To:
// p -> undefined , EXACT
// q -> undefined , EXACT

   p = (int *) malloc(2*sizeof(int));

// Points To:
// p -> *HEAP*_l_7[0] , MAY
// q -> undefined , EXACT

   q = (int *) malloc(2*sizeof(int));

// Points To:
// p -> *HEAP*_l_7[0] , MAY
// q -> *HEAP*_l_8[0] , MAY

   free(a==0?p:q);

// Points To:
// p -> *HEAP*_l_7[0] , MAY
// p -> undefined , MAY
// q -> *HEAP*_l_8[0] , MAY
// q -> undefined , MAY

   return 0;
}
