
Proper effects

int main()
{
   int *p;
   int a;
//             <    is read   >: a
   if (a==1)
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: p _MALLOC_EFFECTS:_MALLOC_
      p = (int *) malloc(2*sizeof(int));
   else
//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: p _MALLOC_EFFECTS:_MALLOC_
      p = (int *) malloc(3*sizeof(int));
//             <may be written>: *ANY_MODULE*:*ANYWHERE*_b0
//             <    is read   >: p
   p[0] = 0;
//             <may be written>: *ANY_MODULE*:*ANYWHERE*_b0
//             <    is read   >: p
   p[1] = 1;
//             <    is read   >: p _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: _MALLOC_EFFECTS:_MALLOC_
   free(p);
   return 0;
}

Points-to


// Points To IN: none


// Points To OUT: none

int main()
{

// Points To: none

   int *p;

// Points To:
// p -> undefined , EXACT

   int a;

// Points To:
// p -> undefined , EXACT

   if (a==1)

// Points To:
// p -> undefined , EXACT

      p = (int *) malloc(2*sizeof(int));
   else

// Points To:
// p -> undefined , EXACT

      p = (int *) malloc(3*sizeof(int));

// Points To:
// p -> *HEAP*_l_10[0] , MAY
// p -> *HEAP*_l_8[0] , MAY

   p[0] = 0;

// Points To:
// p -> *HEAP*_l_10[0] , MAY
// p -> *HEAP*_l_8[0] , MAY

   p[1] = 1;

// Points To:
// p -> *HEAP*_l_10[0] , MAY
// p -> *HEAP*_l_8[0] , MAY

   free(p);

// Points To:
// p -> undefined , EXACT

   return 0;
}
