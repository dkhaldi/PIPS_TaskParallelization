
Transformers for "main"


//  T(main) {main==0}

int main(void)
{

//  T(x,x_new) {x==0}

   int x = 0, x_new = unknown();

//  T(x,x_new) {x==2x_new-2, x#init==0, x_new#init==1}

   while (2*x_new==x+2) {

//  T(x) {2x==x#init+2, x==x_new}

      x = x_new;

//  T(x_new) {x==x_new#init}

      x_new = unknown();
   }

//  T(main) {main==0}

   return 0;
}

