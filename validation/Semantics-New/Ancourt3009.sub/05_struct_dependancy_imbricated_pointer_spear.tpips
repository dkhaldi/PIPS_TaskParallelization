#new
setproperty SEMANTICS_ANALYZE_SCALAR_POINTER_VARIABLES TRUE

setproperty SEMANTICS_ANALYZE_CONSTANT_PATH TRUE

activate PRECONDITIONS_INTER_FULL
activate TRANSFORMERS_INTER_FULL 
