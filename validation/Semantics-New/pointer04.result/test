
Points-to information for "main"


// Points To: none

int main()
{

// Points To: none

   x = 1, y = 2, z = 3;


// Points To: none

   int *p = (int *) malloc(sizeof(int));

// Points To:
// p -> *ANY_MODULE*:*HEAP*_b0 , EXACT

   foo(p);

// Points To:
// p -> *ANY_MODULE*:*HEAP*_b0 , EXACT

   p = &x;

// Points To:
// p -> x , EXACT

   foo(p);

// Points To:
// p -> x , EXACT

   return x+y+z;
}

Proper effects for "foo" with points-to information

void foo(int *p)
{
//             <    is read   >: _p_1 p
//             <    is written>: _p_1
   (*p)++;
}

Proper effects for "main" with points-to information

int main()
{
//             <    is written>: x y z
   x = 1, y = 2, z = 3;

//             <    is read   >: _MALLOC_EFFECTS:_MALLOC_
//             <    is written>: p _MALLOC_EFFECTS:_MALLOC_
   int *p = (int *) malloc(sizeof(int));
//             <    is read   >: p
   foo(p);
//             <    is written>: p
   p = &x;
//             <    is read   >: p
   foo(p);
//             <    is read   >: x y z
   return x+y+z;
}

