Transformers for "main" with points-to information


//  T(main,x,y,z) {main==6, x==1, y==2, z==3}

int main()
{

//  T(x,y,z) {x==1, y==2, z==3}

   x = 1, y = 2, z = 3;


//  T() {}

   int *p = (int *) malloc(sizeof(int));

//  T() {}

   foo(p);

//  T() {}

   p = &x;

//  T() {}

   foo(p);

//  T(main) {x+y+z==main}

   return x+y+z;
}

Preconditions for "main" with points-to information


//  P() {}

int main()
{

//  P() {}

   x = 1, y = 2, z = 3;


//  P(x,y,z) {x==1, y==2, z==3}

   int *p = (int *) malloc(sizeof(int));

//  P(x,y,z) {x==1, y==2, z==3}

   foo(p);

//  P(x,y,z) {x==1, y==2, z==3}

   p = &x;

//  P(x,y,z) {x==1, y==2, z==3}

   foo(p);

//  P(x,y,z) {x==1, y==2, z==3}

   return x+y+z;
}
