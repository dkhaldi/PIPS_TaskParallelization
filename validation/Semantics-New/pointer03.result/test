Transformers for "foo" with points-to information


//  T() {}

void foo(int *p)
{

//  T() {}

   p!=0?(void) 0:__assert_fail("p!=0", "./pointer03.c", 17, __func__);

//  T() {}

   (*p)++;
}

Transformers for "main" with points-to information


//  T(main,x,y,z) {main==x+5, y==2, z==3}

int main()
{

//  T(x,y,z) {x==1, y==2, z==3}

   x = 1, y = 2, z = 3;

//  T() {}

   int *p = (int *) malloc(sizeof(int));

//  T() {}

   foo(p);

//  T() {}

   p = &x;

//  T(x) {}

   foo(p);

//  T(main) {x+y+z==main}

   return x+y+z;
}

