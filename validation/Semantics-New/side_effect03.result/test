
Proper effects

int main()
{
//             <    is written>: i
   int i = 0;
   int a[10];
//             <    is read   >: i
//             <    is written>: a[i++] i

   a[i++] = 0;

   return 0;
}

Transformers without point-to


//  T(main) {main==0}

int main()
{

//  T(i) {i==0}

   int i = 0;

//  T() {i==0}

   int a[10];

//  T(i) {i==1, i#init==0}


   a[i++] = 0;

//  T(main) {i==1, main==0}


   return 0;
}

Preconditions with point-to


//  P() {}

int main()
{

//  P() {}

   int i = 0;

//  P(i) {i==0}

   int a[10];

//  P(i) {i==0}


   a[i++] = 0;

//  P(i) {i==1}


   return 0;
}

