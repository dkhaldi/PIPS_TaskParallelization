
TRANSFORMERS


//  T() {0==-1}

void run()
{

//  T() {}

   int a;

//  T(b) {b==0}

   int b = 0;

//  T(c) {b==0, 0<=c, c<=1}

   int c = rand()%2;

//  T(a,b,c) {b#init==0, 0<=c, 0<=c#init, c#init<=1}

   while (1) {

//  T(a,b,c) {}

      while (c) {

//  T() {}

         if (rand()%2&&b!=0)

//  T() {0==-1}

            error();

//  T(a) {0<=a}

         a = rand();

//  T(b) {b==0, 0<=a}

         b = 0;

//  T(c) {b==0, 0<=a, 0<=c, c<=1}

         c = rand()%2;
      }

//  T(a,c) {c==0, c#init<=0}

      while (!c) {

//  T() {c<=0}

         if (rand()%2&&b!=0)

//  T() {0==-1}

            error();

//  T(a) {0<=a, c<=0}

         a = rand();

//  T(c) {0<=a, 0<=c, c<=1, c#init<=0}

         c = rand()%2;
      }
   }
}

PRECONDITIONS


//  P() {}

void run()
{

//  P() {}

   int a;

//  P() {}

   int b = 0;

//  P(b) {b==0}

   int c = rand()%2;

//  P(b,c) {b==0, 0<=c, c<=1}

   while (1) {

//  P(a,b,c) {b==0, 0<=c, c<=1}

      while (c) {

//  P(a,b,c) {b==0, c==1}

         if (rand()%2&&b!=0)

//  P() {0==-1}

            error();

//  P(a,b,c) {b==0, c==1}

         a = rand();

//  P(a,b,c) {b==0, c==1, 0<=a}

         b = 0;

//  P(a,b,c) {b==0, c==1, 0<=a}

         c = rand()%2;
      }

//  P(a,b,c) {b==0, c==0}

      while (!c) {

//  P(a,b,c) {b==0, c==0}

         if (rand()%2&&b!=0)

//  P() {0==-1}

            error();

//  P(a,b,c) {b==0, c==0}

         a = rand();

//  P(a,b,c) {b==0, c==0, 0<=a}

         c = rand()%2;
      }
   }
}
