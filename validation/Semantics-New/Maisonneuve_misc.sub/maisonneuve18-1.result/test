
TRANSFORMERS


//  T() {0==-1}

void run(void)
{


//  T() {}

   int x, y;

//  T(x,y) {x==0, y==0}

   x = y = 0;

//  T(x,y) {x#init==0, y#init==0, 0<=x, 0<=y}


   while (1) {

//  T() {}

      if (x>=3&&y>=3)

//  T() {0==-1}

         checking_error();

//  T(x,y) {x+y==x#init+y#init+1, x#init<=x, x<=x#init+1}

      if (flip())

//  T(x) {x==x#init+1, y<=2}

         if (y<=2) {

//  T(x) {x==x#init+1, y<=2}

            x++;

//  T() {y<=2}

            if (x>=3&&y>=3)

//  T() {0==-1}

               checking_error();
         }
         else

//  T() {3<=y}

            while (1)

//  T() {3<=y}

               ;
      else if (x<=2) {

//  T(y) {y==y#init+1, x<=2}

         y++;

//  T() {x<=2}

         if (x>=3&&y>=3)

//  T() {0==-1}

            checking_error();
      }
      else

//  T() {3<=x}

         while (1)

//  T() {3<=x}

            ;
   }
}

PRECONDITIONS


//  P() {}

void run(void)
{


//  P() {}

   int x, y;

//  P() {}

   x = y = 0;

//  P(x,y) {x==0, y==0}


   while (1) {

//  P(x,y) {0<=x, 0<=y}

      if (x>=3&&y>=3)

//  P(x,y) {3<=x, 3<=y}

         checking_error();

//  P(x,y) {0<=x, 0<=y}

      if (flip())

//  P(x,y) {0<=x, 0<=y}

         if (y<=2) {

//  P(x,y) {0<=x, 0<=y, y<=2}

            x++;

//  P(x,y) {1<=x, 0<=y, y<=2}

            if (x>=3&&y>=3)

//  P() {0==-1}

               checking_error();
         }
         else

//  P(x,y) {0<=x, 3<=y}

            while (1)

//  P(x,y) {0<=x, 3<=y}

               ;
      else if (x<=2) {

//  P(x,y) {0<=x, x<=2, 0<=y}

         y++;

//  P(x,y) {0<=x, x<=2, 1<=y}

         if (x>=3&&y>=3)

//  P() {0==-1}

            checking_error();
      }
      else

//  P(x,y) {3<=x, 0<=y}

         while (1)

//  P(x,y) {3<=x, 0<=y}

            ;
   }
}
