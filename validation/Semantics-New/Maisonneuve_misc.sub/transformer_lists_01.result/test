
TRANSFORMERS


//  T() {0==-1}

void run()
{

//  T() {}

   int a;

//  T(b) {b==0}

   int b = 0;

//  T(a,b) {b#init==0}

   while (1) {

//  T(a) {0<=a}

      a = rand();

//  T(b) {0<=a}

      if (rand()%2) {

//  T() {0<=a}

         if (rand()%2&&b!=0)

//  T() {0==-1}

            error();

//  T(b) {b==0, 0<=a}

         b = 0;
      }
   }
}

PRECONDITIONS


//  P() {}

void run()
{

//  P() {}

   int a;

//  P() {}

   int b = 0;

//  P(b) {b==0}

   while (1) {

//  P(a,b) {b==0}

      a = rand();

//  P(a,b) {b==0, 0<=a}

      if (rand()%2) {

//  P(a,b) {b==0, 0<=a}

         if (rand()%2&&b!=0)

//  P() {0==-1}

            error();

//  P(a,b) {b==0, 0<=a}

         b = 0;
      }
   }
}
