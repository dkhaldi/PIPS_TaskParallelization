
Proper pointer effects for "main"

int main()
{
   // BEGIN BLOCK
   int *p, *q;
//             <    is read   >: p
//             <    is written>: p[0]

   *p = 1;
//             <    is read   >: p
//             <    is written>: q

   foo(&q, p);
//             <    is read   >: q
//             <    is written>: q[0]
   *q = 2;
   return 0;
   // END BLOCK
}

