      SUBROUTINE HOST
      implicit none
      include "global_parameters.h"
      include "hpfc_commons.h"
      include "hpfc_includes.h"
      include "REDUCTION_parameters.h"
      REAL*4 S
      CALL HPFC INIT HOST
      S = 100.0
      CALL HPRE SUM HPFC REAL4(S, 1)
      CALL HPOST SUM HPFC REAL4(S, 1)
      PRINT *, 'result is (should be 144.) ', S
      CALL HPFC HOST END
      END
