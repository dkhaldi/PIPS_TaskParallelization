! File REDUCTION_node.f
! This file has been automatically generated by the HPF compiler
!
      SUBROUTINE NODE
      implicit none
      include "global_parameters.h"
      include "hpfc_commons.h"
      include "hpfc_includes.h"
      include "REDUCTION_parameters.h"
      INTEGER*4 N
      PARAMETER (N = 10)
      INTEGER I_0, I_1, I_2, I_3, I_4, I_5, I_6, I_7, I
      REAL*4 A(1:3), S
      CALL HPFC INIT NODE
      CALL HPFC LOOP BOUNDS(I_5, I_6, I_7, 2, N-1, 1, 1)
      CALL HPFC LOOP BOUNDS(I_1, I_2, I_3, 1, N, 1, 1)
      I = I_3
      DO I_0 = I_1, I_2
         I = I+1
         A(I_0) = REAL(I)
      ENDDO
      S = 100.0
      CALL NPRE SUM HPFC REAL4(S, 1)
      IF (MY POS(1,1).LE.3) THEN
         DO I_4 = I_5, I_6
            S = S+A(I_4)
         ENDDO
      ENDIF
      CALL NPOST SUM HPFC REAL4(S, 1)
      CALL HPFC NODE END
      END
!
! That is all for REDUCTION_node.f
!
