      SUBROUTINE HOST
      implicit none
      include "global_parameters.h"
      include "hpfc_commons.h"
      include "hpfc_includes.h"
      include "HPFTEST49_parameters.h"
      INTEGER*4 SIZE
      PARAMETER (SIZE = 500)
      INTEGER ALPHA1, LALPHA1, PSI1, T LID, I, N
      INTEGER A(1:SIZE)
      CALL HPFC INIT HOST
      PRINT *, 'hpftest 49 running...'
      READ *, N
! updating shared variable N
      BUF INDEX = 0
      SEND NOT INITIALIZED = .TRUE.
      BUF INDEX = BUF INDEX+1
      HPFC INTEGER4 BUFF(BUF INDEX) = N
      CALL HPFC INTEGER4 BUFPCK
      CALL HPFC HCAST
! end of update
! collecting distributed variable A
      IF (1.LE.N) THEN
         DO PSI1 = 1, MIN(4, HPFC DIVIDE(N+130, 128))
            BUF INDEX = 0
            RECEIVED NOT PERFORMED = .FALSE.
            SIZE OF RECEIVED BUFFER = 0
            T LID = PSI1
            CALL HPFC RCV FROM NODE(T LID)
            CALL HPFC INTEGER4 BUFUPK
            DO ALPHA1 = MAX(1, 128*PSI1-130), MIN(128*PSI1-3, 500, N)
               LALPHA1 = ALPHA1-128*PSI1+131
               BUF INDEX = BUF INDEX+1
               A(ALPHA1) = HPFC INTEGER4 BUFF(BUF INDEX)
            ENDDO
         ENDDO
      ENDIF
! end of collect
      PRINT *, (A(I), I = 1, N)
! updating shared variable I
      BUF INDEX = 0
      SEND NOT INITIALIZED = .TRUE.
      BUF INDEX = BUF INDEX+1
      HPFC INTEGER4 BUFF(BUF INDEX) = I
      CALL HPFC INTEGER4 BUFPCK
      CALL HPFC HCAST
! end of update
      PRINT *, 'that''s all'
      CALL HPFC HOST END
      END
