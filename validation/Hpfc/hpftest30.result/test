!
! File HPFTEST30_node.f
! This file has been automatically generated by the HPF compiler
!
      SUBROUTINE NODE
      implicit none
      include "global_parameters.h"
      include "hpfc_commons.h"
      include "hpfc_includes.h"
      include "HPFTEST30_parameters.h"
      INTEGER ALPHA1, LALPHA1, PSI1, I_1, I_2, I_3, I_4, I_5, I_6, 
     &I_7, I_8, I_9, I
      INTEGER A(0:5), B(1:5)
      CALL HPFC INIT NODE
      CALL HPFC LOOP BOUNDS(I_7, I_8, I_9, 2, 10, 1, 1)
      CALL HPFC LOOP BOUNDS(I_2, I_3, I_4, 1, 10, 2, 1)
      I = I_4
      DO I_1 = I_2, I_3
         I = I+1
         A(I_1) = I
      ENDDO
      CALL HPFC CMPCOMPUTER(1, 1, 0, 0, 0, 0, 0, 0)
      IF (HPFC COMPUTERP()) THEN
         I_5 = MOD(1-1, 5)+1
         B(I_5) = 100
      ENDIF
! P(1) send A(5) to (+1)
      IF (MY POS(1,1).EQ.1) THEN
         CALL HPFC CMPNEIGHBOUR(1)
         CALL HPFC INTEGER4 PACK 1(A, HPFTEST30 A LO1, 
     &   HPFTEST30 A UP1, 5, 5, 1)
         CALL HPFC SNDTO N
      ENDIF
! P(2) receive A(0) from (-1)
      IF (MY POS(1,1).EQ.2) THEN
         CALL HPFC CMPNEIGHBOUR(-1)
         CALL HPFC RCVFR N
         CALL HPFC INTEGER4 UNPACK 1(A, HPFTEST30 A LO1, 
     &   HPFTEST30 A UP1, 0, 0, 1)
      ENDIF
      DO I_6 = I_7, I_8
         B(I_6) = A(I_6-1)
      ENDDO
! collecting distributed variable B
      PSI1 = MY POS(1,1)
      BUF INDEX = 0
      SEND NOT INITIALIZED = .TRUE.
      DO ALPHA1 = 5*PSI1-4, MIN(10, 5*PSI1)
         LALPHA1 = ALPHA1-5*PSI1+5
         BUF INDEX = BUF INDEX+1
         HPFC INTEGER4 BUFF(BUF INDEX) = B(LALPHA1)
      ENDDO
      CALL HPFC INTEGER4 BUFPCK
      CALL HPFC SND TO HOST
! end of collect
! updating shared variable I
      BUF INDEX = 0
      RECEIVED NOT PERFORMED = .FALSE.
      SIZE OF RECEIVED BUFFER = 0
      CALL HPFC NCAST
      CALL HPFC INTEGER4 BUFUPK
      BUF INDEX = BUF INDEX+1
      I = HPFC INTEGER4 BUFF(BUF INDEX)
! end of update
      CALL HPFC NODE END
      END
!
! That is all for HPFTEST30_node.f
