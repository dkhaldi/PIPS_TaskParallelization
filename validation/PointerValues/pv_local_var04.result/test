int main()
{

// Pointer values:
// p == &a (exact);
// q == *ANY_MODULE*:*UNDEFINED* (exact);
// r == &a (exact);
// s == *ANY_MODULE*:*UNDEFINED* (exact);


   if (a>1) {

// Pointer values:
// p == &a (exact);
// q == *ANY_MODULE*:*UNDEFINED* (exact);
// r == &a (exact);
// s == *ANY_MODULE*:*UNDEFINED* (exact);

      static int *p = &a;

