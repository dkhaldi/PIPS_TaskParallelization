void block_scope()
{
   // BEGIN BLOCK
{{
   int x = 6;                                                           /*0004*/
   goto lab1;                                                           /*0005*/
lab2:   x = 2;                                                               /*0007*/
   {
      // BEGIN BLOCK
   {{
      int x = 7;                                                        /*0009*/
lab1:      x--;
   }}
      // END BLOCK
   }
   x++;                                                                 /*0013*/
   goto lab2;                                                           /*0014*/
}}
   // END BLOCK
}

