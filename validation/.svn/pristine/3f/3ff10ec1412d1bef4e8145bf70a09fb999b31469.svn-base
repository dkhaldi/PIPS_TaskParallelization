// OMP style
int main(int argc, char *argv[])
{
   //PIPS generated variable
   unsigned int i;
   //PIPS generated variable
   double A[100], B[100], C[100], D[100];
   //PIPS generated variable
   int N;
   //PIPS generated variable
   double a, b;
#pragma omp parallel default(shared) 
   {
#pragma omp single
      {
         N = 100;
      }
#pragma omp single
      {
#pragma omp task
         {
            for(i = 0; i <= N-1; i += 1) {
#pragma omp task
               {
                  B[i] = 3;
               }
#pragma omp task
               {
                  A[i] = 5;
               }
#pragma omp taskwait 

            }
         }
#pragma omp task
         {
            for(i = 0; i <= N-1; i += 1)
               C[i] = 5;
         }
      }
#pragma omp single
      {
         for(i = 0; i <= N-1; i += 1)
            D[i] = A[i]+B[i]+C[i];
      }
   }

   return 0;
}
