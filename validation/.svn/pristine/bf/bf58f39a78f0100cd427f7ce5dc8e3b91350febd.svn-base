* Example with indirection's  array reference 

      PROGRAM INDIRECTION
      REAL X(500),Y(500)

      PRINT *, 'THIS IS A TEST'                                         0001
      N = 10                                                            0002
      S = 0.0                                                           0003
      DO 100 I = 1, N-1                                                 0004
         IF (X(N-I).LT.1.OR.X(N-I).GT.500) STOP 
     &   "Bound violation:array INDIRECTION:Y, 1st dimension"
         IF (N-I.LT.1.OR.N-I.GT.500) STOP 
     &   "Bound violation:array INDIRECTION:X, 1st dimension"
         IF (I.LT.1.OR.I.GT.500) STOP 
     &   "Bound violation:array INDIRECTION:Y, 1st dimension"
         IF (Y(I).LT.1.OR.Y(I).GT.500) STOP 
     &   "Bound violation:array INDIRECTION:X, 1st dimension"
         S = S+X(Y(I))*Y(X(N-I))                                        0005
100      CONTINUE                                                       0006
      WRITE (*, '("b",F15.5)') S                                        0007
      END
