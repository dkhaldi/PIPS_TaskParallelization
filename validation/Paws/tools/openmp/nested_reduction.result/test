// OMP style
int main(void)
{
   int k, i;                                                            /*0004*/
   k = 0;
   i = 0;
   int sum;                                                             /*0005*/
   sum = 0;

#pragma omp parallel for reduction(+:sum) private(i)
   for(k = 0; k <= 99; k += 1)                                          /*0007*/
#pragma omp parallel for reduction(+:sum)
      for(i = 0; i <= 99; i += 1)                                       /*0008*/
         sum += i+k;                                                    /*0009*/

   printf("sum: %d\n", sum);                                            /*0013*/

   return 0;                                                            /*0015*/
}
