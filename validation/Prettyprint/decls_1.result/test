# initial codes
      SUBROUTINE BLA
      INTEGER A, B, C
      INTEGER T(1:3)
      COMMON A, B, C
      EQUIVALENCE (T, A)
      PRINT *, T(3)                                                     0006
      END
      PROGRAM DECLS1
      INTEGER A, B, C
      INTEGER T(1:3)
      COMMON A, B, C
      EQUIVALENCE (T, A)
      PRINT *, A                                                        0006
      CALL FOO                                                          0007
      CALL BLA                                                          0008
      END
      SUBROUTINE FOO
      INTEGER A, B, C
      INTEGER T(1:3)
      COMMON A, B, C
      EQUIVALENCE (T, A)
      DATA A, B, C /1, 2, 3/
      PRINT *, B                                                        0007
      END
