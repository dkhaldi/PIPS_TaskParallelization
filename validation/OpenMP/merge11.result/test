// OMP style
int main(void)
{
   int k = 0, i = 0, l = 0;
   float sum = 0;
   float array[size][size][size];

#pragma omp parallel for private(k)
   for(l = 0; l <= size-1; l += 1)
#pragma omp parallel for private(i)
      for(k = 0; k <= size-1; k += 1)
         for(i = 0; i <= size-1; i += 1)
            array[l][k][i] = i+k;

   l = 4;

   for(i = 0; i <= size-1; i += 1)
      for(k = 0; k <= size-1; k += 1)
         printf("array[%d][%d] = %f", i, k, array[l][k][i]);

   return 0;
}
